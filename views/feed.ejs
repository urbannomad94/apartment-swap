<%- include('partials/header-logged-in') -%>
<div class="container row row-cols-1 row-cols-md-3 justify-content-between">
  <% for(var i=0; i<posts.length; i++) {%>
    <div class="col card py-3 px-3" style="width: 18rem;">
      <a href="/post/<%= posts[i]._id%>" class="card-link">
        <img src="<%= posts[i].image%>" class="card-img-top" alt="...">
      </a>
      <div class="card-body">
        <h5 class="card-title fw-bold"><%= posts[i].title%></h5>
        <p class="card-text"><%= posts[i].description%></p>
      </div>
      <div class="card-body text-center position-relative bottom-0">
        <a href="/post/<%= posts[i]._id%>" class="card-link btn btn-outline-primary">View Post</a>
      </div>
    </div>
  <% } %>
</div>
<%- include('partials/footer') -%>