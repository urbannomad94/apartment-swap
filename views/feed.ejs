<%- include('partials/header-logged-in') -%>
<div class="container text-center py-3">
  <h1>All Listings</h1>
</div>
<div class="container-fluid row g-5 justify-content-around mx-0">
  <% for(let i=0; i < posts.length; i++) {%>
  <div class="col-3 card py-3" style="width: 18rem">
    <a href="/post/<%= posts[i]._id%>" class="card-link">
      <img src="<%= posts[i].image%>" class="card-img-top" alt="..." />
    </a>
    <div class="card-body">
      <h5 class="card-title fw-bold"><%= posts[i].title%></h5>
      <p class="card-text"><%= posts[i].city%>, <%= posts[i].country%></p>
    </div>
    <div class="card-body text-center">
      <a
        href="/post/<%= posts[i]._id%>"
        class="card-link btn btn-outline-primary"
        >View Post</a
      >
    </div>
  </div>
  <% } %>
</div>
<%- include('partials/footer') -%>
