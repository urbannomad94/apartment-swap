<%- include('partials/header-logged-in') -%>
<div class="container text-center py-3">
  <h1>Favorites</h1>
</div>
<%if(favorites.length === 0){ %>
<div class="text-center">
  <h3>You have no favorites to show</h3>
</div>
<%}%>
<div
  class="container-fluid row row-cols-1 row-cols-md-3 justify-content-around mx-0"
>
  <% for(let i=0; i < favorites.length; i++) {%>
  <div class="col-3 card py-3 px-3 mb-3" style="width: 18rem">
    <a href="/post/<%= favorites[i]._id%>" class="card-link">
      <img src="<%= favorites[i].image%>" class="card-img-top" alt="..." />
    </a>
    <div class="card-body">
      <h5 class="card-title fw-bold"><%= favorites[i].title%></h5>
      <p class="card-text">
        <%= favorites[i].city%>, <%= favorites[i].country%>
      </p>
    </div>
    <div class="card-body text-center position-relative bottom-0">
      <a
        href="/post/<%= favorites[i]._id%>"
        class="card-link btn btn-outline-primary"
        >View Post</a
      >
    </div>
  </div>
  <% } %>
</div>
<%- include('partials/footer') -%>
